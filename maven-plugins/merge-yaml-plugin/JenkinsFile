def PomFile = 'maven-plugins/merge-yaml-plugin/pom.xml'
def mvnCmd = 'mvn ${env.STAGE_NAME} -f ${PomFile}'
pipeline {
   agent any
   stages {
      stage('compile') {
           steps {
              // Run Maven on a Unix agent.
              sh "${mvnCmd}"
           }
      }
      stage('package') {
           steps {
              // Run Maven on a Unix agent.
              sh "${mvnCmd}"
           }
      }
      stage('install') {
           steps {
              // Run Maven on a Unix agent.
              sh "${mvnCmd}"
           }
      }
   }
}
