pipeline {
   def PomFile = 'maven-plugins/merge-yaml-plugin/pom.xml'
   agent any
   stages {
      stage('Compile') {
           steps {
              // Run Maven on a Unix agent.
              sh "mvn compile -f ${PomFile}"
           }
      }
      stage('Package') {
           steps {
              // Run Maven on a Unix agent.
              sh "mvn -f ${PomFile}"
           }
      }
      stage('Install') {
           steps {
              // Run Maven on a Unix agent.
              sh "mvn install -f ${PomFile}"
           }
      }
   }
}
